<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RaspicamController">
    <Style x:Key="TextBlockStyle" TargetType="TextBlock"> 
        <Setter Property="Padding" Value="0 0 10 0"></Setter>
    </Style>
    <Style x:Key="SettingsSectionStyle" TargetType="Grid">
        <Setter Property="Margin" Value="5 15 5 5"></Setter>
    </Style>
    <Style x:Key="SettingsKeyStyle" TargetType="HeaderedContentControl">
        <Setter Property="Margin" Value="5 0 5 0"></Setter>
    </Style>
</ResourceDictionary>